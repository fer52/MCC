<?xml version='1.0' encoding='utf-8'?>
<widget id="org.apache.cordova.mcc" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    id          = "com.websolutionsgt.mcc"
    versionCode = "10"
    version     = "1.1.01" >
    <name>Managment Collection Credits</name>
    <description>
        Administraci√≥n de creditos
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        FC
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="img/icon.png" width="180" height="180" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
</widget>
